        <activity
            android:name="softhealth.zombiecatch.Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="softhealth.zombiecatch.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="softhealth.zombiecatch.Menu"
            android:label="@string/title_activity_menu" >
        </activity>
        <activity
            android:name="softhealth.zombiecatch.MenuActivity"
            android:label="@string/title_activity_menu" >
        </activity>
    </application>

</manifest>
