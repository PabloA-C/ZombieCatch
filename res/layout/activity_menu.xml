<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_app"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dip"
    tools:context="softhealth.zombiecatch.MenuActivity" >

    <Button
        android:id="@+id/menu_button_create"
        style="@style/BigButtonDisabled"
        android:text="@string/Create" />

    <Button
        android:id="@+id/menu_button_join"
        style="@style/BigButtonDisabled"
        android:text="@string/Join" />

    <Button
        android:id="@+id/menu_button_profile"
        style="@style/BigButton"
        android:text="@string/Profile" />

    <Button
        android:id="@+id/menu_button_howto"
        style="@style/BigButton"
        android:text="@string/Howto" />

</LinearLayout>