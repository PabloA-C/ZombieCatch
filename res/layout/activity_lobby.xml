<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_app"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dip" >

    <TextView
        android:id="@+id/lobby_title"
        style="@style/BigText"
        android:text="@string/title_activity_Lobby" />

    <TextView
        android:id="@+id/lobby_waiting"
        style="@style/PlainText"
        android:layout_marginBottom="5dp"
        android:text="@string/Lobby_waiting" />

    <ScrollView
        android:id="@+id/create_scrollView_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/lobby_playerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/lobby_button_ready"
        style="@style/NormalButton"
        android:text="@string/Lobby_ready" />

</LinearLayout>